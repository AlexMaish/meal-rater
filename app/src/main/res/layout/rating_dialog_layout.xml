<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rate_bar"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_rectangle"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:background="@drawable/filled_rectangle"
            android:id="@+id/rate1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            android:textAppearance="?textAppearanceHeadline6"
            android:text="1"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rate2"/>
        <TextView
            android:background="@drawable/border_rectangle"
            android:id="@+id/rate2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            android:textAppearance="?textAppearanceHeadline6"
            android:text="2"
            android:gravity="center"
            android:padding="8dp"
            app:layout_constraintStart_toEndOf="@id/rate1"
            app:layout_constraintEnd_toStartOf="@id/rate3"/>
        <TextView
            android:id="@+id/rate3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/border_rectangle"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            android:textAppearance="?textAppearanceHeadline6"
            android:text="3"
            android:gravity="center"
            android:padding="8dp"
            app:layout_constraintStart_toEndOf="@id/rate2"
            app:layout_constraintEnd_toStartOf="@id/rate4"/>
        <TextView
            android:id="@+id/rate4"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            android:background="@drawable/border_rectangle"
            android:textAppearance="?textAppearanceHeadline6"
            android:text="4"
            android:gravity="center"
            android:padding="8dp"
            app:layout_constraintStart_toEndOf="@id/rate3"
            app:layout_constraintEnd_toStartOf="@id/rate5"/>
        <TextView
            android:id="@+id/rate5"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            android:background="@drawable/border_rectangle"
            android:textAppearance="?textAppearanceHeadline6"
            android:text="5"
            android:gravity="center"
            android:padding="8dp"
            app:layout_constraintStart_toEndOf="@id/rate4"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        app:layout_constraintTop_toBottomOf="@id/rate_bar"
        android:layout_marginTop="16dp"
        android:paddingVertical="8dp"
        android:gravity="center"
        android:minWidth="130dp"
        android:textStyle="bold"
        android:id="@+id/btn_cancel"
        android:textAppearance="?textAppearanceBody1"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintTop_toBottomOf="@id/rate_bar"
        android:layout_marginTop="16dp"
        android:paddingVertical="8dp"
        android:gravity="center"
        android:minWidth="130dp"
        android:textStyle="bold"
        android:id="@+id/btn_rate"
        android:textAppearance="?textAppearanceBody1"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>